@{
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}
@model PizzaBox.Client.Models.SalesViewModel

<form class="form-inline" action="/Store/ViewSales" method="post">
  <div class="form-group mb-2">
    <label for="staticEmail2" class="sr-only">Start Date</label>
    <input type="date" name="StartDate" required>
  </div>
  <div class="form-group mx-sm-3 mb-2">
    <label for="inputPassword2" class="sr-only">End Date</label>
    <input type="date" name="EndDate" required>
  </div>
  <button type="submit" class="btn btn-primary mb-2">View Sales</button>
</form>
<h5>@ViewData["SalesView"]</h5>
<h5>@ViewData["Revenue"]</h5>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Pizza</th>
      <th scope="col">Sold Quantity</th>
      <th scope="col">Revenue</th>
    </tr>
  </thead>
  <tbody>
    @{
      foreach (var item in Model.pizzas)
      {
          <tr>
            <td>@item.Name</td>
            <td>@Model.GetQuantity(@item.Name)</td>
            <td>$@Model.GetRevenue(@item.Name)</td>
          </tr> 
      }
    }
   
  </tbody>
</table>
