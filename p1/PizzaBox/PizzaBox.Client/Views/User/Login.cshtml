@model PizzaBox.Domain.Models.User


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Log In</title>
</head>

<body class="container-md">
  <div class="row">
    <div class="col-md-12 text-center">
    <h1 class="display-4">Welcome To PizzaBox</h1> 
    </div>
  </div>  

  <div class= "row mt-5">
    <form class="col-md-4 offset-md-4" action="/user/login" method="post">
      <p class="lead">Please Log In</p>
      <div class="form-group " >
        <label>Username</label>
        <input type="text" name="UserName" class="form-control">
      </div>

      <div class="form-group">
        <label>Password</label>
        <input type="password" name="Password" class="form-control">
      </div>

      <div class="form-group">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="Type" value="U" checked>
          <label class="form-check-label" >User</label>
        </div>
      </div>

      <div class="form-group">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="Type" value="S">
          <label class="form-check-label">Store</label>
        </div>
      </div>

      <p class="text-danger">@ViewData["error"]</p>
      <button type="submit" class="btn btn-primary">Log In</button>

    </form>
  </div>
</body>
</html>
